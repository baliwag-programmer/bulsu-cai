    Private Sub MainMDI_Load(sender As System.Object, e As System.EventArgs) Handles MyBase.Load
        Dim user = Auth.GetInstance
        ToolStripStatusLabel.Text = String.Format("Welcome `{0}` ({1}, {2}) | Role : {3}", user.username, user.last_name, user.first_name, user.role.display_name)

        LessonList.Visible = user.role.name = "instructor"
        AdministratroList.Visible = user.role.name = "administrator"
        InstructorList.Visible = user.role.name = "administrator"
        StudentList.Visible = user.role.name = "administrator" Or user.role.name = "instructor"
        Seperator1.Visible = InstructorList.Visible
        Seperator2.Visible = AdministratroList.Visible
        Seperator3.Visible = LessonList.Visible
    End Sub

